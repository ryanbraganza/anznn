              .input
                %select.small{:name => "hour"}
                  %option{:value => "", :disabled => "disabled"} Hour (24hr)
                  %option 01
                  %option 02
                  %option 22
                <span>:</span>
                %select.small{:name => "minute"}
                  %option{:value => "", :disabled => "disabled"} Minute
                  %option 01
                  %option 58
