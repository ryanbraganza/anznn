              %label Assisted conception:
              .input
                %input.xxlarge
            .clearfix
              %label Ethnicity of mother:
              .input
                %input.xxlarge
            .clearfix
              %label Surgery description:
              .input
                %textarea.xxlarge{:rows => "3"}
